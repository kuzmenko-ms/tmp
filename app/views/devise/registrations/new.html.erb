<h2>Регистрация</h2>
  <%= image_tag("4.png") %> 
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
<div id = "reg">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<%= f.text_field :surname,placeholder: "Фамилия" %><br /> 
<%= f.text_field :name,placeholder: "Имя" %><br />
<%= f.text_field :midname,placeholder: "Отчество" %><br />

  <%= f.email_field :email, :autofocus => true,placeholder: "Email" %><br /> 

  <%= f.password_field :password,placeholder: "Пароль" %><br /> 

  <%= f.password_field :password_confirmation,placeholder: "Повторите пароль" %><br /> 
<%= f.file_field :avatar %>
  <div><%= f.submit "Зарегистрироваться" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
 

